<section class="py-3">
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="card">
          <div class="card-header">
            <h3>View Transactions</h3>
          </div>
           
          <table class="table table-striped table-responsive-sm table-bordered table-condensed">
          <thead class="thead-dark">
            <tr>
            <th>#</th>
             <th>From</th>
              <th>To</th>
              <th>Credits Transferred</th>
              <th>Date of Transfer</th>
              </tr>
          </thead>
          <tbody>
            {{#each transactions}}
              <tr>
                <td></td>
                <td>{{this.fromUser}}</td>
                <td>{{this.ToUSer}}</td>
                <td>{{this.creditsTransferred}}</td>                                
                <td>{{this.timestamp}}</td>

                                
              </tr>
              {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
  </div>
</section>

