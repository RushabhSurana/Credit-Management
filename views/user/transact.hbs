

<h3 class="text-center">{{viewTitle}}</h3>
<div class="container">
  <div class="row">
    <div class="col-md-5 col-sm-5 col-xs-5">
      <form  class="form-horizontal" action="/transact" id="amount" method="post">
        <div class="form-group">
          <label for="from" class="col-sm-2 control-label">From</label>
          <div class="col-sm-10">
            <input type="hidden" name="fromid" value={{records.id}}>
            <input type="hidden" name="fromname" value="{{records.fullName}}">
            
            <input type="text-muted" disabled="disabled" class="form-control" name="payeeName" value="{{records.fullName}}">
          </div>
        </div>

        <div class="form-group">
          <label for="to" class="col-sm-2 control-label">TO</label>
          <div class="col-sm-10">
            
						
            <select class="form-control form-control-lg" name="recipientID">
              
							
							{{#each transact}}
							{{!-- {{#ifNotEquals this.fullName ,records.fullName}} --}}
              <option class="form-control form-option"  name="recipientID" value={{this._id}}>{{this.fullName}}</option>
               
							{{!-- {{/ifNotEquals }} --}}
							{{/each}}
            </select>
						 
          </div>
        </div>  

        
      
			
      
        <div class="form-group ">
            <label class="col-sm-5 col-form-label">Credits</label>
            <div class="col-sm-10">
                <input type="text" class="form-control form-control-lg" id="amount" type="number" name="amount" min=0 value="0" placeholder="Credits"/>
            </div>

        </div>

        <div class="form-group">
            <div class="col-sm-12 offset-sm-3">
                <button type="submit" class="btn btn-success btn-block">Submit</button>
            </div>
        </div>
    </form>
    </div>
  </div>
	</div>
</div>
</section>
